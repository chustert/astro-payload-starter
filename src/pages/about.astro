---
/**
 * About Page
 * 
 * Demonstrates the use of section organisms aligned with Relume Figma Kit patterns.
 * Each section is a reusable organism component for consistent, maintainable layouts.
 */

import BaseLayout from '../components/templates/BaseLayout.astro';
import Hero1 from '../components/organisms/Hero1.astro';
import Layout1 from '../components/organisms/Layout1.astro';
import Feature1 from '../components/organisms/Feature1.astro';
import Stats1 from '../components/organisms/Stats1.astro';
import Team1 from '../components/organisms/Team1.astro';
import CTA1 from '../components/organisms/CTA1.astro';
import Section from '../components/organisms/Section.astro';
import Card1 from '../components/molecules/Card1.astro';
import Button from '../components/atoms/Button.astro';
import Badge from '../components/atoms/Badge.astro';

// Data for our sections - could be fetched from a CMS
const stats = [
  { value: '5+', label: 'Years Experience' },
  { value: '100+', label: 'Projects Completed' },
  { value: '50+', label: 'Happy Clients' },
  { value: '24/7', label: 'Support Available' },
];

const values = [
  { 
    icon: '✦', 
    title: 'Simplicity First', 
    description: 'We believe the best solutions are often the simplest. We cut through complexity to deliver clean, maintainable code.' 
  },
  { 
    icon: '◈', 
    title: 'Quality Craftsmanship', 
    description: 'Every line of code, every design decision is made with care. We take pride in the details that make products exceptional.' 
  },
  { 
    icon: '◎', 
    title: 'User-Centered', 
    description: 'Great products start with understanding users. We design experiences that are intuitive, accessible, and delightful.' 
  },
  { 
    icon: '◆', 
    title: 'Continuous Learning', 
    description: 'Technology evolves rapidly. We stay curious, embrace new ideas, and constantly improve our skills and processes.' 
  },
  { 
    icon: '▲', 
    title: 'Open Collaboration', 
    description: 'We believe in the power of community. We share knowledge, contribute to open source, and learn from others.' 
  },
  { 
    icon: '●', 
    title: 'Honest Communication', 
    description: 'Trust is built through transparency. We communicate clearly, set realistic expectations, and deliver on our promises.' 
  },
];

const team = [
  { name: 'Alex Rivera', role: 'Founder & CEO' },
  { name: 'Sam Chen', role: 'Lead Designer' },
  { name: 'Jordan Taylor', role: 'Senior Developer' },
  { name: 'Morgan Lee', role: 'Product Manager' },
];
---

<BaseLayout 
  title="About Us" 
  description="Learn about our mission, values, and the team behind our success."
>
  <main>
    <!-- Hero Section -->
    <Hero1
      tagline="About Us"
      heading="We Build Digital<br />Experiences That Matter"
      description="We're a passionate team of designers and developers dedicated to creating beautiful, functional websites that help businesses grow."
    />

    <!-- Our Story Section -->
    <Layout1
      tagline="Our Story"
      heading="Started with a Simple Idea"
      description="We founded our company with a clear mission: make web development accessible and enjoyable. Too often, we saw businesses struggle with overcomplicated tools and bloated frameworks."
      background="muted"
    >
      <p class="text-regular text-secondary">
        That's why we created this design system—a collection of clean, customizable 
        components that let you focus on what matters: building great products. 
        No unnecessary complexity, just pure, maintainable code.
      </p>

      <Card1 slot="media" variant="filled" class="p-8">
        <div class="grid grid-cols-2 gap-8">
          {stats.map((stat) => (
            <div class="stat">
              <span class="stat__number">{stat.value}</span>
              <span class="stat__label">{stat.label}</span>
            </div>
          ))}
        </div>
      </Card1>
    </Layout1>

    <!-- Our Values Section -->
    <Feature1
      title="Our Core Values"
      subtitle="The principles that guide everything we do."
      features={values}
      columns={3}
      cardVariant="outlined"
    />

    <!-- Team Section -->
    <Team1
      title="Meet Our Team"
      subtitle="The talented people behind our success."
      members={team}
      columns={4}
      background="muted"
    />

    <!-- Mission Section -->
    <Section size="lg" centerHeading>
      <div class="mission-content">
        <Badge class="mb-4">Our Mission</Badge>
        <h2 class="heading-2 mb-6" style="max-width: 20ch;">
          Empowering creators to build the web they imagine
        </h2>
        <p class="text-large mb-8" style="max-width: 55ch;">
          We're on a mission to democratize web development. By providing 
          well-crafted, accessible tools, we help creators focus on their 
          vision rather than fighting with technology.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button variant="primary" size="lg" as="a" href="/style-guide">
            Explore Components
          </Button>
          <Button variant="secondary" size="lg" as="a" href="/">
            Back to Home
          </Button>
        </div>
      </div>
    </Section>

    <!-- CTA Section -->
    <CTA1
      heading="Ready to Start Building?"
      description="Join thousands of developers using our design system."
      background="dark"
    >
      <Button
        variant="primary"
        size="lg"
        style="--btn-primary-bg: var(--color-white); --btn-primary-color: var(--color-neutral-darkest); --btn-primary-border: var(--color-white);"
      >
        Get Started Free
      </Button>
    </CTA1>
  </main>
</BaseLayout>

<style>
  /* Stats styling for the story card */
  .stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .stat__number {
    font-size: var(--text-size-h3);
    font-weight: var(--font-weight-bold);
    line-height: 1;
    color: var(--color-text-primary);
  }

  .stat__label {
    font-size: var(--text-size-small);
    color: var(--color-text-secondary);
  }

  /* Mission content centering */
  .mission-content {
    text-align: center;
    max-width: 65ch;
    margin: 0 auto;
  }

  /* Text color utility */
  .text-secondary {
    color: var(--color-text-secondary);
  }
</style>
