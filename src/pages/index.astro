---
/**
 * Homepage
 * 
 * Demonstrates the use of section organisms aligned with Relume Figma Kit patterns.
 * Each section is a reusable organism component for consistent, maintainable layouts.
 */

import BaseLayout from '../components/templates/BaseLayout.astro';
import Hero1 from '../components/organisms/Hero1.astro';
import Feature1 from '../components/organisms/Feature1.astro';
import Layout1 from '../components/organisms/Layout1.astro';
import CTA1 from '../components/organisms/CTA1.astro';
import Card1 from '../components/molecules/Card1.astro';
import Button from '../components/atoms/Button.astro';
import Badge from '../components/atoms/Badge.astro';

// Data for our sections - could be fetched from a CMS
const features = [
  { 
    icon: '◈', 
    title: 'Atomic Design', 
    description: 'Components organized into atoms, molecules, organisms, and templates for maximum reusability and consistency.' 
  },
  { 
    icon: '✦', 
    title: 'CSS Variables', 
    description: 'Every component is customizable through CSS custom properties. Override tokens to match your brand instantly.' 
  },
  { 
    icon: '●', 
    title: 'No Dependencies', 
    description: 'Pure vanilla CSS with no framework dependencies. Just Astro and your creativity. No build complexity.' 
  },
];

const steps = [
  {
    step: 'Step 1',
    title: 'Set Up Your Design Tokens',
    description: 'Define your colors, typography, spacing, and other design tokens in tokens.css. These variables cascade to all components.',
  },
  {
    step: 'Step 2',
    title: 'Copy Components You Need',
    description: 'Browse the component library and copy the ones you need. Each component is self-contained and documented.',
  },
  {
    step: 'Step 3',
    title: 'Customize Per-Component',
    description: 'Override component-specific variables to fine-tune individual components without affecting others.',
  },
];
---

<BaseLayout title="Home">
  <main>
    <!-- Hero Section -->
    <Hero1
      tagline="Vanilla CSS Design System"
      heading="Build Faster with<br />Astro Components"
      description="A minimal, unstyled component library for Astro with an atomic design structure. Customize everything through CSS variables."
    >
      <Button variant="primary" size="lg">Get Started</Button>
      <Button variant="secondary" size="lg" as="a" href="/style-guide">
        View Style Guide
      </Button>
    </Hero1>

    <!-- Features Section -->
    <Feature1
      title="Why This Starter?"
      subtitle="Everything you need to build beautiful, consistent interfaces."
      features={features}
      columns={3}
      cardVariant="elevated"
      background="muted"
    />

    <!-- How It Works Section -->
    <Layout1
      tagline="How It Works"
      heading="Copy components, customize tokens, and build your site."
    >
      <div class="stack-lg">
        {steps.map((item) => (
          <div>
            <Badge class="mb-2">{item.step}</Badge>
            <h3 class="heading-5 mb-2">{item.title}</h3>
            <p class="text-regular">{item.description}</p>
          </div>
        ))}
      </div>

      <Card1 slot="media" variant="filled" class="p-8">
        <pre class="mb-0"><code>{`/* Override button styles globally */
:root {
  --btn-primary-bg: #6366f1;
  --btn-border-radius: 9999px;
  --btn-font-weight: 600;
}`}</code></pre>
      </Card1>
    </Layout1>

    <!-- CTA Section -->
    <CTA1
      heading="Ready to Get Started?"
      description="Explore the style guide to see all available components and design tokens."
      background="primary"
      size="lg"
    >
      <Button
        variant="secondary"
        size="lg"
        as="a"
        href="/style-guide"
        style="--btn-secondary-bg: white; --btn-secondary-color: var(--color-primary-700);"
      >
        View Style Guide
      </Button>
    </CTA1>
  </main>
</BaseLayout>
