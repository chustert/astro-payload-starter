{
  "name": "astro-starter-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/astro",
    "dev:both": "sh -c \"npm run dev:payload & npx wait-on tcp:3000 && npm run dev:astro; wait\"",
    "dev:payload": "npm run dev --workspace=apps/payload-cms",
    "dev:astro": "npm run dev --workspace=apps/astro",
    "build": "npm run build --workspace=apps/astro",
    "build:payload": "npm run build --workspace=apps/payload-cms",
    "preview": "npm run preview --workspace=apps/astro",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
